<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/navigation_layout_black"
        android:id="@+id/navigation"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:layout_marginTop="15dp"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_candidatenametab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/candidate_name"/>
                <EditText
                    android:id="@+id/edt_candidatename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/enter_candidatename"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_candidatenametab"
                    android:background="@android:color/transparent"
                    android:paddingRight="5dp"
                    android:maxLines="1"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_gendertab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/gender_selector"
                    android:layout_centerVertical="true"
                    />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">
                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="15dp"
                        android:text="@string/male"
                        android:background="@drawable/cb_left_check_bg"
                        android:textColor="@color/gender_cb_textcolor"
                        android:textSize="@dimen/small_text_size"
                        android:checked="true"
                        android:button="@null"/>
                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="15dp"
                        android:background="@drawable/cb_right_check_bg"
                        android:textColor="@color/gender_cb_textcolor"
                        android:textSize="@dimen/small_text_size"
                        android:text="@string/female"
                        android:button="@null"/>
                </RadioGroup>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_agetab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/real_age"/>
                <EditText
                    android:id="@+id/edt_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/enter_real_age"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_agetab"
                    android:background="@android:color/transparent"
                    android:paddingRight="5dp"
                    android:maxEms="2"
                    android:maxLines="1"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_phoneab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/phonenumber"/>
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/enter_phone"
                    android:gravity="right|center_vertical"
                    android:inputType="phone"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_phoneab"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
<!-- 公司名称开始-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:layout_marginTop="15dp"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_companyab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/yuan_companyname"/>
                <EditText
                    android:id="@+id/edt_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/enter_yuan_companyname"
                    android:gravity="right|center_vertical"
                    android:inputType="text"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_companyab"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
            <RelativeLayout
                android:id="@+id/rl_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_industryab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/engaged_industry"/>
                <EditText
                    android:id="@+id/edt_industry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/please_select"
                    android:focusable="false"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_industryab"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawableRight="@drawable/icon_arrow_next"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_departmentab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/present_department"/>
                <EditText
                    android:id="@+id/edt_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/enter_yourdepartment"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_departmentab"
                    android:maxLines="1"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_positiontab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/present_position"/>
                <EditText
                    android:id="@+id/edt_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/enter_yourposition"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_positiontab"
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
<!--意向职位开始-->
            <RelativeLayout
                android:id="@+id/rl_expectposition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:layout_marginTop="15dp"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_expectpositiontab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/excepted_position"/>
                <EditText
                    android:id="@+id/edt_expectposition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/please_select"
                    android:focusable="false"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_expectpositiontab"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawableRight="@drawable/icon_arrow_next"
                    android:drawablePadding="5dp"
                    android:background="@android:color/transparent"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
            <RelativeLayout
                android:id="@+id/rl_workcity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_citytab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/work_city"/>
                <EditText
                    android:id="@+id/edt_workcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/please_select"
                    android:focusable="false"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_citytab"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawableRight="@drawable/icon_arrow_next"
                    android:drawablePadding="5dp"
                    android:background="@android:color/transparent"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/split_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_emailtab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/email"/>
                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_emailtab"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_click_bg"
                android:layout_marginTop="15dp"
                android:padding="12dp">
                <TextView
                    android:id="@+id/tv_remarktab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title3"
                    android:text="@string/remarks"/>
                <EditText
                    android:id="@+id/edt_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/title2"
                    android:textColorHint="@color/title3"
                    android:hint="@string/enter_remarks"
                    android:inputType="textMultiLine"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:maxLines="10"
                    android:layout_toRightOf="@+id/tv_remarktab"
                    android:background="@android:color/transparent"
                    />
            </RelativeLayout>
            <com.offer9191.boss.widget.progressbutton.iml.ActionProcessButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:text="@string/ensure"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                custom:pb_colorComplete="@color/green_complete"
                custom:pb_colorNormal="#E51C23"
                custom:pb_colorPressed="#A81C23"
                custom:pb_colorProgress="#A81C23"
                custom:pb_textComplete="@string/submit_success"
                custom:pb_textProgress="@string/submit_progress" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>